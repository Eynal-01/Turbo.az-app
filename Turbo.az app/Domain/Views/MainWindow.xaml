<Window x:Class="Turbo.az_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turbo.az_app" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" >
    <Canvas>
        <StackPanel Orientation="Horizontal" Width="800" Height="70" Background="Red">
            <Label Foreground="white" FontWeight="bold" Margin="20" FontSize="15">TURBO.AZ</Label>
            <Label Foreground="white" Margin="20">Butun elanlar</Label>
            <Label Foreground="white" Margin="20">Avtosalonlar</Label>
            <Label Foreground="white" Margin="20">Ehtiyat hisseleri ve aksesuarlar</Label>
            <Button Background="LimeGreen" Width="80" Height="40" Foreground="White" Margin="100,0,0,0" Style="{StaticResource MyButtonStyle1}">Yeni elan</Button>
        </StackPanel>
        <Canvas Canvas.Top="70" Width="800" Height="140">
            <Label FontSize="18" Foreground="gray" Canvas.Left="30">Vendor</Label>
            <ComboBox Width="130" Height="40" Canvas.Left="30" Canvas.Top="30" SelectedIndex="0"
                ItemsSource="{Binding Vendors, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{Binding comboBoxItemStyle2}">
                <!--<i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding CitySelectionChanged}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>-->
            </ComboBox>
        </Canvas>
    </Canvas>
</Window>
                   